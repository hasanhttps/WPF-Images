<Window x:Class="WPF_Research_Practise.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Research_Practise"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="87*"/>
            <ColumnDefinition Width="313*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Button Height="30" Command="{Binding AddImageCommand}" Width="150" Content="Add Image" Margin="12,175,12,229"/>
            <Button Height="30" Command="{Binding GaleryCommand}" Width="150" Content="Galery" Margin="12,217,12,187"/>
        </Grid>

        <Grid Grid.Column="1">
            <Frame Name="MainFrame" />
        </Grid>
    </Grid>
</Window>
